@page "{id:int}"
@model Task1SphinxCommercial.UI.Pages.Clients.DeleteClientsModel
@{
    ViewData["Title"] = "Delete Client";
}

<h2>Delete Client</h2>

<h4>Are you sure you want to delete this client?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ClientDetails.Name</dd>
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.ClientDetails.Code</dd>
        <dt class="col-sm-2">Class</dt>
        <dd class="col-sm-10">@Model.ClientDetails.Class</dd>
        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.ClientDetails.State</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" name="id" value="@Model.ClientDetails.ClientId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./ListClients" class="btn btn-secondary">Cancel</a>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-2">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
