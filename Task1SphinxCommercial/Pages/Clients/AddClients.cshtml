@page
@model Task1SphinxCommercial.UI.Pages.Clients.AddClientsModel

<h2>Add Client</h2>

<form method="post">
    <div>
        <label asp-for="NewClient.Name"></label>
        <input asp-for="NewClient.Name" class="form-control" />
        <span asp-validation-for="NewClient.Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="NewClient.Code"></label>
        <input asp-for="NewClient.Code" class="form-control" />
        <span asp-validation-for="NewClient.Code" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="NewClient.Class"></label>
        <select asp-for="NewClient.Class" class="form-control">
            <option value="">Select Class</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
        </select>
        <span asp-validation-for="NewClient.Class" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="NewClient.State"></label>
        <select asp-for="NewClient.State" class="form-control">
            <option value="">Select State</option>
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
            <option value="Pending">Pending</option>
        </select>
        <span asp-validation-for="NewClient.State" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add Client</button>
    <a asp-page="/Clients/ListClients"  class="btn btn-secondary">Cancel</a>
</form>
