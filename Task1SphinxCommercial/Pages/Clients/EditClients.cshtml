@page "{id:int}"
@model Task1SphinxCommercial.UI.Pages.Clients.EditClientsModel

<h2>Edit Client</h2>

<form method="post">
    <input type="hidden" asp-for="EditClient.ClientId" />
    <div>
        <label asp-for="EditClient.Name"></label>
        <input asp-for="EditClient.Name" class="form-control" />
        <span asp-validation-for="EditClient.Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EditClient.Code"></label>
        <input asp-for="EditClient.Code" class="form-control" readonly />
        <input type="hidden" asp-for="EditClient.Code" /> <!-- Hidden field to ensure value is posted -->
    </div>
    <div>
        <label asp-for="EditClient.Class"></label>
        <select asp-for="EditClient.Class" class="form-control">
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
        </select>
        <span asp-validation-for="EditClient.Class" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EditClient.State"></label>
        <select asp-for="EditClient.State" class="form-control">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
            <option value="Pending">Pending</option>
        </select>
        <span asp-validation-for="EditClient.State" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="/Clients/ListClients" asp-route-id="@Model.EditClient.ClientId" class="btn btn-secondary">Cancel</a>
</form>

