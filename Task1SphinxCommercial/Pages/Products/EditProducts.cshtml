@page "{id:int}"
@model Task1SphinxCommercial.UI.Pages.Products.EditProductsModel

<h2>Edit Product</h2>

<form method="post">
    <input type="hidden" asp-for="EditProduct.ProductId" /> <!-- Ensure ProductId is included for binding -->

    <div>
        <label asp-for="EditProduct.Name"></label>
        <input asp-for="EditProduct.Name" class="form-control" />
        <span asp-validation-for="EditProduct.Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EditProduct.Description"></label>
        <input asp-for="EditProduct.Description" class="form-control" />
        <span asp-validation-for="EditProduct.Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EditProduct.IsActive"></label>
        <input type="checkbox" asp-for="EditProduct.IsActive" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="/Products/ListProducts" asp-route-id="@Model.EditProduct.ProductId" class="btn btn-secondary">Cancel</a>
</form>
